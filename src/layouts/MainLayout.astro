---
export interface Props {
  title?: string;
  description?: string;
}
const {
  title = 'Maciej Witek — Strona oficjalna',
  description = 'Oficjalna strona Macieja Witka — sylwetka naukowa, obszary badawcze, publikacje i kontakt.'
} = Astro.props as Props;
import '../styles/global.css';
import MenuBar from "../components/MenuBar.astro";
---
<html lang="pl" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 64 64'><rect width='64' height='64' rx='12' fill='%230EA5E9'/><path d='M20 44c6-4 10-12 12-24 2 12 6 20 12 24' stroke='white' stroke-width='4' stroke-linecap='round' stroke-linejoin='round'/><circle cx='32' cy='18' r='3' fill='white'/></svg>" type="image/svg+xml" />
  </head>
  <body class="min-h-screen antialiased">
    <div class="background-container"></div>
    <a href="/" class="logo">Maciej Witek - Official site</a>
    <MenuBar currentPage={Astro.url.pathname} />
    <main class="main-content slide-in">
      <slot />
    </main>
    <style>
      .logo {
        position: fixed;
        top: 1.5rem;
        left: 2.5rem;
        z-index: 1001;
        font-size: 1rem;
        color: var(--color-fg);
        text-decoration: none;
        opacity: 0.9;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        background-color: rgba(var(--color-bg-rgb), 0.95);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
      }

      @media (max-width: 1280px) {
        .logo {
          left: auto;
          right: 5rem; /* Adjust this value to position the logo next to the menu button */
          top: 1.5rem;
        }
      }
      
      body {
        background-color: var(--color-bg);
        color: var(--color-fg);
      }
      .main-content {
        /* Usunięto max-width i margin, aby kontener wypełniał dostępną przestrzeń */
        padding: 2.5rem;
        padding-top: 2.5rem;
        transition: margin-right 0.3s ease-in-out; /* Płynne przejście */
      }

      @media (max-width: 768px) {
        .main-content {
          padding: 1rem;
          padding-top: 1.5rem;
        }
      }

      @media (min-width: 1280px) { /* Zsynchronizowano breakpoint z MenuBar */
        .main-content {
          margin-right: calc(var(--menu-width-lg) + 2rem);
          padding-top: 2.5rem;
        }
      }
    </style>
  </body>
</html>
