---
import { getCollection } from 'astro:content';
import path from 'path-browserify';
import { Icon } from 'astro-icon/components';
import PLIcon from './icons/PLIcon.astro';
import ENIcon from './icons/ENIcon.astro';

const publications = await getCollection('publications');
const baseUrl = import.meta.env.BASE_URL;

const polishPublications = publications.filter(p => p.data.lang === 'pl');
const englishPublications = publications.filter(p => p.data.lang === 'en');
---

<div class="relative-container">
  <div id="publications-wrapper">
    <div id="polish-publications-section">
      <h2 class="text-2xl font-bold mt-8 mb-4 flex items-center gap-2">
        <PLIcon />
        <span>Publikacje polskie</span>
      </h2>
      <div class="list-container">
        <ul class="publication-list">
          {polishPublications.map((publication) => (
          <li class="publication-item">
            <a href={path.join(baseUrl, 'publications', publication.slug)} class="publication-link">
              <div>
                <span class="publication-author text-sm md:text-base">{publication.data.author}</span>
                <span class="text-base md:text-lg font-semibold">{publication.data.title}</span>
                <span class="hidden-data" style="display: none;">
                  {publication.data.keywords.join(' ')}
                  {publication.data.abstract}
                  {publication.data.publicationDate}
                </span>
              </div>
              <Icon name="mdi:arrow-right" class="list-arrow-icon" />
            </a>
          </li>
        ))}
        </ul>
      </div>
    </div>

    <div id="english-publications-section">
      <h2 class="text-2xl font-bold mt-8 mb-4 flex items-center gap-2">
        <ENIcon />
        <span>Publikacje angielskie</span>
      </h2>
      <div class="list-container">
        <ul class="publication-list">
          {englishPublications.map((publication) => (
          <li class="publication-item">
            <a href={path.join(baseUrl, 'publications', publication.slug)} class="publication-link">
              <div>
                <span class="publication-author text-sm md:text-base">{publication.data.author}</span>
                <span class="text-base md:text-lg font-semibold">{publication.data.title}</span>
                <span class="hidden-data" style="display: none;">
                  {publication.data.keywords.join(' ')}
                  {publication.data.abstract}
                  {publication.data.publicationDate}
                </span>
              </div>
              <Icon name="mdi:arrow-right" class="list-arrow-icon" />
            </a>
          </li>
        ))}
        </ul>
      </div>
    </div>
  </div>

  <div id="no-results-message" class="no-results-message" style="display: none;">
    <Icon name="mdi:magnify-close" class="no-results-icon" />
    <p>It's nothing here...</p>
  </div>
</div>

<style>
  .relative-container {
    position: relative;
    min-height: 300px; /* Zapewnia minimalną wysokość dla pozycjonowania */
  }
  .no-results-message {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    font-style: italic;
    opacity: 0.7;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    font-size: 1.71875rem; /* 3.125rem * 0.55 */
  }
  .no-results-icon {
    font-size: 5.5rem; /* 10rem * 0.55 */
  }
  .publication-item.hidden {
    display: none;
  }
  .publication-link > div {
    display: flex;
    flex-direction: column;
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const searchBar = document.getElementById('search-bar');
    const publicationsWrapper = document.getElementById('publications-wrapper');
    const noResultsMessage = document.getElementById('no-results-message');
    const polishSection = document.getElementById('polish-publications-section');
    const englishSection = document.getElementById('english-publications-section');
    const publicationItems = Array.from(document.querySelectorAll('.publication-item'));
    const animations = new Map();

    const updateSectionVisibility = () => {
      const visiblePolish = polishSection.querySelectorAll('.publication-item:not(.hidden)').length;
      const visibleEnglish = englishSection.querySelectorAll('.publication-item:not(.hidden)').length;

      polishSection.style.display = visiblePolish > 0 ? '' : 'none';
      englishSection.style.display = visibleEnglish > 0 ? '' : 'none';
    };

    searchBar.addEventListener('input', (e) => {
      const searchTerm = e.target.value.toLowerCase().trim();
      const searchTokens = searchTerm.split(' ').filter(token => token);
      const animationPromises = [];

      publicationItems.forEach(item => {
        const title = item.querySelector('.font-semibold')?.textContent.toLowerCase().trim() || '';
        const author = item.querySelector('.publication-author')?.textContent.toLowerCase().trim() || '';
        const hiddenData = item.querySelector('.hidden-data')?.textContent.toLowerCase().trim() || '';
        const publicationText = `${author} ${title} ${hiddenData}`;
        
        const isVisible = searchTokens.every(token => publicationText.includes(token));
        const isHidden = item.classList.contains('hidden');

        if (animations.has(item)) {
          animations.get(item).cancel();
        }

        if (isVisible && isHidden) {
          item.classList.remove('hidden');
          const animation = item.animate([
            { opacity: 0 },
            { opacity: 1 }
          ], { duration: 300, easing: 'ease-out' });
          animations.set(item, animation);
        } else if (!isVisible && !isHidden) {
          const animation = item.animate([
            { opacity: 1 },
            { opacity: 0 }
          ], { duration: 300, easing: 'ease-in' });
          animations.set(item, animation);
          
          const promise = new Promise(resolve => {
            animation.onfinish = () => {
              item.classList.add('hidden');
              animations.delete(item);
              resolve(null);
            };
          });
          animationPromises.push(promise);
        }
      });

      Promise.all(animationPromises).then(() => {
        updateSectionVisibility();
        const visibleCount = publicationItems.filter(item => !item.classList.contains('hidden')).length;
        
        if (visibleCount === 0 && searchTerm) {
          // publicationsWrapper.style.display = 'none'; // This is now handled by updateSectionVisibility
          noResultsMessage.style.display = 'flex';
        } else {
          // publicationsWrapper.style.display = ''; // This is now handled by updateSectionVisibility
          noResultsMessage.style.display = 'none';
        }
      });
    });

    // Initial check
    updateSectionVisibility();
  });
</script>
