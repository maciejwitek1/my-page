---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="teaching-tile p-6 rounded-lg bg-secondary">
  <h2 class="text-2xl font-bold mb-4">{title}</h2>
  <div class="prose dark:prose-invert max-w-none">
    <slot />
  </div>
</div>

<style>
  .teaching-tile {
    margin-bottom: 2rem;
  }

  .highlight-blue {
    color: var(--link-color);
    font-weight: 600;
  }

  .highlight-green {
    color: var(--green);
    font-weight: 600;
  }

  .highlight-purple {
    color: var(--hover-color);
    font-weight: 600;
  }
</style>