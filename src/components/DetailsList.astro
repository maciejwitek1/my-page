---
import Icon from "./Icon.astro";

interface Item {
  title: string;
  link: string;
}

interface Props {
  title: string;
  items: Item[];
}

const { title, items } = Astro.props;
---

<div class="rounded-lg bg-secondary">
  <h2 class="text-2xl font-bold px-6 pt-6 pb-4">{title}</h2>
  <ul class="publication-list">
    {items.map((item: Item) => (
      <li class="publication-item last:border-b-0">
        <a class="publication-link" href={item.link} target="_blank" rel="noopener noreferrer">
          <div class="publication-details">
            <span class="title">{item.title}</span>
          </div>
          <Icon name="mdi:arrow-right" class:list={["publication-icon"]} />
        </a>
      </li>
    ))}
  </ul>
</div>